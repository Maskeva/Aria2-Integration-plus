{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.5.0",
  "default_locale": "en",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "downloads",
    "downloads.open",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' *;"
  },
  "background": {
    "scripts": [
      "config.js",
      "common.js",
      "/lib/aria.js",
      "/lib/tools.js",
      "/lib/polygoat.js"
    ]
  },
  "action": {
    "default_popup": "data/action/index.html",
    "default_icon": {
      "16": "data/icons/disabled/16.png",
      "32": "data/icons/disabled/32.png",
      "64": "data/icons/disabled/64.png",
      "128": "data/icons/disabled/128.png",
      "256": "data/icons/disabled/256.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "homepage_url": "https://github.com/Maskeva/Aria2-Integration-plus",
  "options_ui": {
    "page": "data/options/menu.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{da6e3952-4eba-4995-9ee4-bcb427dfca97}",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}